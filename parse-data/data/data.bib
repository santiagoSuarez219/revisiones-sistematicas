  month={11},
  journal={Laboratory Investigation},
  issn={15300307},
  volume={103},
  author={Wang, Ching Wei and Lee, Yu Ching and Lin, Yi Jia and Firdi, Nabila Puspita and Muzakky, Hikam and Liu, Tzu Chien and Lai, Po Jen and Wang, Chih Hung and Wang, Yu Chi and Yu, Mu Hsien and Wu, Chia Hua and Chao, Tai Kuang},
