  volume={83},
  author={Li, Hui and Zhao, Yuanshen and Duan, Jingxian and Gu, Jia and Liu, Zaiyi and Zhang, Huailing and Zhang, Yuqin and Li, Zhi Cheng},
  url={https://sciencedirect.bibliotecaitm.elogim.com/science/article/pii/S0141938224000623},
