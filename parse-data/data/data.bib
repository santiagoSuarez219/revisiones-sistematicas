  month={4},
  journal={Cancer Letters},
  issn={18727980},
  volume={587},
  author={Liang, Bishan and Wu, Qijing and Wang, Yawen and Shi, Yulu and Sun, Fei and Huang, Qiong and Li, Guanjun and Liu, Yajing and Zhang, Shuyi and Xu, Xin and Yao, Guangyu and Peng, Jianjun and Zhai, Xiaohui and Wu, Jing and Tan, Yujing and Wu, Zhenzhen and Zhou, Rui and Li, Shaowei and Wu, Jianhua and Yang, Ming and Liao, Wangjun and Shi, Min},
