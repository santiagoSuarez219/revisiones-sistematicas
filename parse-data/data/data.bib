  issn={14796821},
  volume={31},
  author={Seo, Dong Hyun and Lee, Seul Gi and Choi, Soon Min and Kim, Ha Yan and Park, Sunmi and Jung, Sang Geun and Jo, Young Suk and Lee, Jandee},
