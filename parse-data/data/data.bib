  author={Du, S. and Xie, W. and Gao, S. and Zhao, R. and Wang, H. and Tian, J. and Liu, J. and Liu, Z. and Zhang, L.},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-105002714259&doi=10.1186%2fs13058-025-02009-6&partnerID=40&md5=d05324f8e78c430f2f502828023d61f3},
