  author={Wang, Yunze and Hou, Yuying and Xiong, Zhankun and Lu, Libo and Zong, Zhanxiang and Wang, Bo and Chen, Hebing and Zhang, Wen and Zhou, Xionghui},
  url={https://sciencedirect.bibliotecaitm.elogim.com/science/article/pii/S2667237525001195},
