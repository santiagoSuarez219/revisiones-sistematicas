  issn={18784046},
  volume={32},
  pages={12-23},
  author={Liu, Yue Xia and Liu, Qing Hua and Hu, Quan Hui and Shi, Jia Yao and Liu, Gui Lian and Liu, Han and Shu, Sheng Chun},
