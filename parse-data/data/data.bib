  issn={18790887},
  volume={161},
  pages={183-190},
  author={Jang, Bum Sup and Lim, Yu Jin and Song, Changhoon and Jeon, Seung Hyuck and Lee, Keun Wook and Kang, Sung Bum and Lee, Yoon Jin and Kim, Jae Sung},
